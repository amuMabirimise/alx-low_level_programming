EXECUTABLE = school

all: $(EXECUTABLE)

SOURCES = main.c school.c

OBJECTS = $(SOURCES:.c=.o)

CC = gcc

CFLAGS = -Wall

install: $(EXECUTABLE)
    cp $(EXECUTABLE) /usr/local/bin/

uninstall: $(EXECUTABLE)
    rm -f /usr/local/bin/$(EXECUTABLE)

test: $(EXECUTABLE)
    ./$(EXECUTABLE)

docs: $(EXECUTABLE)
    doxygen Doxyfile

archive: $(EXECUTABLE)
    tar -czvf myproject-1.0.tar.gz *

%.o: %.c
    $(CC) $(CFLAGS) -MMD -c $< -o $@

clean:
	rm -f $(EXECUTABLE) $(OBJECTS)

